document.addEventListener("DOMContentLoaded", function () {
  const variantOptions = document.querySelectorAll("[dataimgnamev]"); // Variant selection elements
  const variantSliders = document.querySelectorAll(".variant-slider-wrapper");

  function getVariantIdFromURL() {
    const urlParams = new URLSearchParams(window.location.search);
    return urlParams.get("variant"); // Get the variant ID from the URL
  }

  function showSelectedVariant(selectedVariantId) {
    let variantFound = false;

    variantSliders.forEach((slider) => {
      if (slider.getAttribute("data-variant") === selectedVariantId) {
        slider.style.display = "block"; // Show matching variant slider
        variantFound = true;
      } else {
        slider.style.display = "none"; // Hide others
      }
    });

    if (!variantFound) {
      console.warn("No matching variant found for ID:", selectedVariantId);
    }
  }

  // ✅ Show the correct variant images when the page loads
  const currentVariantId = getVariantIdFromURL();
  if (currentVariantId) {
    showSelectedVariant(currentVariantId);
  } else {
    // If no variant is in the URL, show only the first one
    variantSliders.forEach((slider, index) => {
      slider.style.display = index === 0 ? "block" : "none";
    });
  }

  // ✅ Listen for variant selection changes
  variantOptions.forEach((option) => {
    option.addEventListener("click", function () {
      const selectedVariantId = this.getAttribute("data-variant-id"); // Ensure variant options have this attribute

      if (selectedVariantId) {
        showSelectedVariant(selectedVariantId);

        // ✅ Update the URL to reflect the new variant
        const url = new URL(window.location);
        url.searchParams.set("variant", selectedVariantId);
        window.history.replaceState({}, "", url);
      }
    });
  });

  // ✅ Update the images when Shopify updates the variant selection (e.g., dropdowns)
  document.addEventListener("variant:changed", function (event) {
    const newVariantId = event.detail.variant.id.toString();
    showSelectedVariant(newVariantId);

    // Update the URL
    const url = new URL(window.location);
    url.searchParams.set("variant", newVariantId);
    window.history.replaceState({}, "", url);
  });
});


  </script>



      
