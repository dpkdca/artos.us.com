{% for block in section.blocks %}
  <div class="about-text-with-image-section {{ block.settings.customclass }} " style="background-color: {{ block.settings.background-color }}">
    <div class="container">
      {% if block.settings.title != blank %}
        <div class="center">
          <h2 class="h2-main-title">{{ block.settings.title }}</h2>
        </div>
      {% endif %}
      <div class="about-image-text-block {% if block.settings.horizontal_image_alignment != blank %}{{ block.settings.horizontal_image_alignment }}-about-image-text-block{% endif %}">
        {% if block.settings.image != blank %}
        <div class="about-image-block">
          <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.image.alt }}">
        </div>
          {% endif %}
          {% if block.settings.content != blank %}
          <div class="about-text-block">
            {{ block.settings.content }}
          </div>
          {% endif %}
      </div>
    </div>
  </div>
  {% endfor %}
{% schema %}
  {
    "name": "About Image with Text",
    "blocks": [
      {
        "type": "text",
        "name": "Text with image block",
        "settings": [
          {
            "type": "text",
            "id": "customclass",
            "label": "Customclass"
          },
          {
            "type": "color",
            "id": "background-color",
            "label": "Backgorund Block"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Heading"
          },
          {
            "type": "richtext",
            "id": "content",
            "label": "Paragraph"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "select",
            "id": "horizontal_image_alignment",
            "label": "Horizontal Image alignment",
            "options": [
              {
                "value": "left",
                "label": "Left"
              },
              {
                "value": "right",
                "label": "Right"
              }
            ]
          }
        ]
      }
    ]
  }
{% endschema %}

